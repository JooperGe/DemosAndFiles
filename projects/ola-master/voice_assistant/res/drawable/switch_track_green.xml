<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0px"
        android:left="0px"
        android:right="0px"
        android:top="0px">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:centerColor="#84007715"
                android:centerX="0.90"
                android:dither="true"
                android:endColor="#54ffffff"
                android:startColor="#44000000" />

            <corners android:radius="9dp" />

            <padding android:padding="5dp" />
        </shape>
    </item>
    <item
        android:bottom="0px"
        android:left="0px"
        android:right="0px"
        android:top="0px">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:centerColor="#84007715"
                android:centerY="0.95"
                android:dither="true"
                android:endColor="#33ffffff"
                android:startColor="#44000000" />

            <corners android:radius="9dp" />

            <padding android:padding="5dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="0px"
        android:right="1dp"
        android:top="0px">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#42007715"
                android:centerX="0.90"
                android:dither="true"
                android:endColor="#55000000"
                android:startColor="#12000000" />

            <corners android:radius="9dp" />

            <padding android:padding="5dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="0px"
        android:right="1dp"
        android:top="0px">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="#42007715"
                android:centerY="0.95"
                android:dither="true"
                android:endColor="#88000000"
                android:startColor="#22000000" />

            <corners android:radius="9dp" />
        </shape>
    </item>

</layer-list>