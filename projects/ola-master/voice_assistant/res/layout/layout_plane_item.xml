<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/tv_index"
        style="@style/selection_index"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_marginTop = "@dimen/content_margin_top_and_bottom"
        android:layout_marginBottom = "@dimen/content_margin_top_and_bottom"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="中国航空"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_content_color"
            android:textSize="@dimen/content_primary" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title" >

            <ImageView
                android:id="@+id/imgv_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_begin"
                android:contentDescription="@string/img_content_discription"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_time_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgv_begin"
                android:layout_marginLeft="5dp"
                android:text="上海"
            	android:singleLine="true"
            	android:ellipsize="end"
                android:drawableLeft="@drawable/icon_begin"
                android:layout_toRightOf="@+id/imgv_begin"
                android:textColor="@color/text_content_color"
                android:textSize="@dimen/content_primary" />

            <TextView
                android:id="@+id/tv_air_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_time_begin"
                android:layout_marginLeft="5dp"
                android:text="上海"
            	android:singleLine="true"
            	android:ellipsize="end"
                android:layout_toRightOf="@+id/tv_time_begin"
                android:textColor="@color/text_content_color"
                android:textSize="@dimen/content_primary" />

            <ImageView
                android:id="@+id/imgv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgv_begin"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_end" 
                android:contentDescription="@string/img_content_discription"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time_begin"
                android:layout_alignBottom="@+id/imgv_end"
                android:layout_marginLeft="5dp"
                android:text="上海"
            	android:singleLine="true"
            	android:ellipsize="end"
                android:drawableLeft="@drawable/icon_end"
                android:layout_toRightOf="@+id/imgv_end"
                android:textColor="@color/text_content_color"
                android:textSize="@dimen/content_primary" />

            <TextView
                android:id="@+id/tv_air_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_time_end"
                android:layout_marginLeft="5dp"
                android:text="上海"
           		android:singleLine="true"
            	android:ellipsize="end"
                android:layout_toRightOf="@+id/tv_time_end"
                android:textColor="@color/text_content_color"
                android:textSize="@dimen/content_primary" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_content_number_color"
            android:text="2222"
            android:textSize="@dimen/content_secondary_number_1" />

        <TextView
            android:id="@+id/tv_rebate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/text_content_assist_color_1"
            android:text ="123"
            android:textSize="@dimen/content_secondary_number_2" />
    </LinearLayout>

</LinearLayout>