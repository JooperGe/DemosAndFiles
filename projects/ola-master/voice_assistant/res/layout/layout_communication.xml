<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/exit_communication_view"
        android:background="@color/app_bg" >

        <ListView
            android:id="@+id/lst_communication_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="@dimen/main_listview_divider_height"
            android:focusable="false"
            android:listSelector="#00000000"
            android:padding="@dimen/padding_small"
            android:scrollbars="none" />
    </LinearLayout>

    <ImageView
        android:id="@+id/exit_communication_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-15dp"
        android:src="@drawable/icon_close_normal" />

</RelativeLayout>