<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/str_coupon"
        android:textColor="@color/alarm_txt_blue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_recommend_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignLeft="@+id/tv_recommend_title"
        android:layout_alignRight="@+id/tv_recommend_title"
        android:layout_below="@+id/tv_recommend_title"
        android:background="@color/alarm_txt_blue" />

</RelativeLayout>