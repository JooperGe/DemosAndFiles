<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/title_secondary_img_margin_left_right"
        style="@style/selection_index" />

    <ImageView
        android:id="@+id/imgv_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="@dimen/title_secondary_img_margin_left_right"        
        android:contentDescription="@string/img_content_discription" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/title_secondary_img_margin_left_right"
        android:layout_weight="1" >
	    <TextView
	        android:id="@+id/tv_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"	        	        
	        android:textColor="@color/text_content_color"
	        android:textSize="@dimen/content_primary" />
    </RelativeLayout> 
    <ImageView
        android:id="@+id/imgv_call"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/title_secondary_img_margin_left_right"
        android:contentDescription="@string/img_content_discription"
        android:src="@drawable/icons_call" />

</LinearLayout>