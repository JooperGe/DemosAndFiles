<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_index"
        style="@style/selection_index"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text = "1"
        android:layout_marginLeft="@dimen/content_index_margin_left" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="@dimen/whole_content_margin_right"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_person_name"       
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_marginLeft="5dp"                    
            android:text="毛泽东"
            android:textColor="@color/list_item_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_periods"           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tv_person_name"
            android:layout_alignLeft="@+id/tv_person_name"
            android:singleLine="true"
            android:text="1949年9月--1959年4月"
            android:textColor="@color/list_item_text"
            android:textSize="@dimen/content_primary" />
        
        <TextView
            android:id="@+id/tv_person_info"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tv_periods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_person_name"
            android:singleLine="true"
            android:text="中国 　第一届　国家主席"
            android:textColor="@color/list_item_text"
            android:textSize="@dimen/content_primary" />
       
    </RelativeLayout>

</LinearLayout>