<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_item_bg"
    android:paddingTop="@dimen/content_margin_top_and_bottom"
    android:paddingBottom="@dimen/content_margin_top_and_bottom" >

    <TextView
        android:id="@+id/tv_index"
        style="@style/selection_index"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/content_index_margin_left" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <RelativeLayout
	        android:id="@+id/layout_top"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="@dimen/whole_content_margin_right"
	        android:layout_gravity="center_vertical" >
	      
	        <ImageView
	            android:id="@+id/imgv_logo"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_alignParentTop="true"
	            android:contentDescription="@string/img_content_discription"
	            android:scaleType="fitXY"
	            android:src="@drawable/logo" />
	
	        <TextView
	            android:id="@+id/tv_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:layout_toRightOf="@+id/imgv_logo"
	            android:singleLine="true"
	            android:textColor="@color/text_content_color"
	            android:textSize="@dimen/txt_app_title"
	            android:text="快播" />
	
	        <TextView
	            android:id="@+id/tv_size"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/content_between_vertical"
	            android:layout_alignLeft="@+id/tv_name"
	            android:layout_below="@+id/tv_name"
	            android:textColor="@color/text_content_color"
	            android:textSize="@dimen/txt_app_size"
	            android:text="20M" />
	
	       <TextView
	            android:id="@+id/tv_content_summary"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3dp"
	            android:layout_alignLeft="@+id/tv_name"
	            android:layout_below="@+id/tv_size"
	            android:textColor="@color/text_content_color"
	            android:textSize="@dimen/txt_app_size"
	            android:text="内容提要：" />
	        
	       <TextView
		      android:id="@+id/tv_des"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"	
		      android:layout_marginRight="10dp"
		      android:layout_alignLeft="@+id/tv_name"
	          android:layout_below="@+id/tv_content_summary"
		      android:ellipsize="end"
		      android:maxLines="4"
		      android:lineSpacingExtra="3dp"
		      android:textColor="@color/text_content_color"
		      android:textSize="@dimen/txt_app_content"
		      android:text="快播是一种视频播放器" />
	        
	       <ImageView
	          android:id="@+id/imgv_download"
		      android:layout_width="20dp"
		      android:layout_height="20dp"
		      android:layout_alignParentRight="true"
		      android:layout_marginTop="17dp"
		      android:src="@drawable/icons_download" />
	       	
	    </RelativeLayout>
	    
	    
				    
  </LinearLayout>  

</LinearLayout>