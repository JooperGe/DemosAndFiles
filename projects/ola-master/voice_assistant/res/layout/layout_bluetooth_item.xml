<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal" >
    
        <RelativeLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="35dp"
		    android:background="@drawable/list_item_bg"
		    android:orientation="horizontal">
	    <ImageView
	        android:id="@+id/bluetooth_icon"
	        android:layout_width="10dp"
	        android:layout_height="16dp"
	        android:layout_marginLeft="13dp"
	        android:layout_marginTop="10dip"
	        android:src="@drawable/icon_bluetooth" />
	    <TextView
	        android:id="@+id/tv_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/bluetooth_icon"
	        android:layout_toLeftOf="@+id/tv_ispaired"
	        android:layout_marginLeft="14dip"
	        android:layout_centerVertical="true"
	        android:maxLines="1"
	        android:ellipsize="end"
	        android:textSize="@+dimen/list_text_height"
	        android:textColor="@color/list_item_text"
	        android:text="SSTP" 
	        />
	    <TextView
	        android:id="@+id/tv_ispaired"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="13dip"
	        android:layout_centerVertical="true"
	        android:textSize="@+dimen/list_text_height"
	        android:textColor="@color/list_item_text"
	        android:text="@string/blue_disconnected" />  
	    </RelativeLayout> 
</LinearLayout>