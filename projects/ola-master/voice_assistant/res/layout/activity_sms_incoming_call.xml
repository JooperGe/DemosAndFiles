<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customSwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/setting_content_color"
    android:fillViewport="true"
    android:gravity="top|center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:drawableLeft="@drawable/back"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:text="@string/setting_remind_sms_incoming_call"
        android:textColor="@color/setting_text_color"
        android:textSize="@dimen/setting_title_text_size" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/setting_content_color"
        android:fillViewport="true"
        android:gravity="top|center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/setting_content_color"
            android:fillViewport="true"
            android:gravity="top|center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="4dp"
                android:background="@color/bg_color_setting"
                android:text="@string/setting_remind_incoming_call"
                android:textColor="@color/setting_text_color"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/setting_content_color"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/setting_layout_autoRemind_incomingCall"
                    android:layout_width="fill_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/list_item_bg_setting"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/setting_textview_autoRemind_incomingCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:text="@string/setting_auto_remind_incoming_call"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18.6sp" />

                    <com.viash.voice_assistant.component.CustomSwitchButton
                        android:id="@+id/setting_swtichbutton_autoRemind_incomingCall"
                        style="@style/customSwitchStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        customSwitch:backgroundMask="@drawable/sb_mask_background"
                        customSwitch:leftBackground="@drawable/sb_left_background"
                        customSwitch:orientation="horizontal"
                        customSwitch:rightBackground="@drawable/sb_right_background"
                        customSwitch:textOff="    "
                        customSwitch:textOn="    "
                        customSwitch:textOnThumb="false"
                        customSwitch:thumb="@drawable/switch_thumb"
                        customSwitch:track="@drawable/switch_track" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color_setting" />

                <RelativeLayout
                    android:id="@+id/setting_layout_autoRemind_incomingCall_name"
                    android:layout_width="fill_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/list_item_bg_setting"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/setting_textview_autoRemind_incomingCall_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:text="@string/setting_auto_remind_incoming_call_name"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18.6sp" />

                    <com.viash.voice_assistant.component.CustomSwitchButton
                        android:id="@+id/setting_swtichbutton_autoRemind_incomingCall_name"
                        style="@style/customSwitchStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        customSwitch:backgroundMask="@drawable/sb_mask_background"
                        customSwitch:leftBackground="@drawable/sb_left_background"
                        customSwitch:orientation="horizontal"
                        customSwitch:rightBackground="@drawable/sb_right_background"
                        customSwitch:textOff="    "
                        customSwitch:textOn="    "
                        customSwitch:textOnThumb="false"
                        customSwitch:thumb="@drawable/switch_thumb"
                        customSwitch:track="@drawable/switch_track" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="4dp"
                android:background="@color/bg_color_setting"
                android:text="@string/setting_remind_sms"
                android:textColor="@color/setting_text_color"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/setting_content_color"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/setting_layout_autoRemind_sms"
                    android:layout_width="fill_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/list_item_bg_setting"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/setting_textview_autoRemind_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:text="@string/setting_auto_remind_sms"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18.6sp" />

                    <com.viash.voice_assistant.component.CustomSwitchButton
                        android:id="@+id/setting_swtichbutton_autoRemind_sms"
                        style="@style/customSwitchStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        customSwitch:backgroundMask="@drawable/sb_mask_background"
                        customSwitch:leftBackground="@drawable/sb_left_background"
                        customSwitch:orientation="horizontal"
                        customSwitch:rightBackground="@drawable/sb_right_background"
                        customSwitch:textOff="    "
                        customSwitch:textOn="    "
                        customSwitch:textOnThumb="false"
                        customSwitch:thumb="@drawable/switch_thumb"
                        customSwitch:track="@drawable/switch_track" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color_setting" />

                <RelativeLayout
                    android:id="@+id/setting_layout_autoRemind_sms_name_or_number"
                    android:layout_width="fill_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/list_item_bg_setting"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/setting_textview_autoRemind_sms_name_or_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:text="@string/setting_auto_remind_sms_name_or_number"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18.6sp" />

                    <com.viash.voice_assistant.component.CustomSwitchButton
                        android:id="@+id/setting_swtichbutton_autoRemind_sms_name_or_number"
                        style="@style/customSwitchStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        customSwitch:backgroundMask="@drawable/sb_mask_background"
                        customSwitch:leftBackground="@drawable/sb_left_background"
                        customSwitch:orientation="horizontal"
                        customSwitch:rightBackground="@drawable/sb_right_background"
                        customSwitch:textOff="    "
                        customSwitch:textOn="    "
                        customSwitch:textOnThumb="false"
                        customSwitch:thumb="@drawable/switch_thumb"
                        customSwitch:track="@drawable/switch_track" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color_setting" />

                <RelativeLayout
                    android:id="@+id/setting_layout_autoRemind_sms_content"
                    android:layout_width="fill_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/list_item_bg_setting"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/setting_textview_autoRemind_sms_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:text="@string/setting_auto_remind_sms_content"
                        android:textColor="@color/setting_text_color"
                        android:textSize="18.6sp" />

                    <com.viash.voice_assistant.component.CustomSwitchButton
                        android:id="@+id/setting_swtichbutton_autoRemind_sms_content"
                        style="@style/customSwitchStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        customSwitch:backgroundMask="@drawable/sb_mask_background"
                        customSwitch:leftBackground="@drawable/sb_left_background"
                        customSwitch:orientation="horizontal"
                        customSwitch:rightBackground="@drawable/sb_right_background"
                        customSwitch:textOff="    "
                        customSwitch:textOn="    "
                        customSwitch:textOnThumb="false"
                        customSwitch:thumb="@drawable/switch_thumb"
                        customSwitch:track="@drawable/switch_track" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>