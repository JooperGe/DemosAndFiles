<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_titlebar"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layout_title_style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgv_source"
                android:layout_width="@dimen/title_primary_icon_size"
                android:layout_height="@dimen/title_primary_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_margin_border"
                android:layout_marginRight="@dimen/title_primary_img_margin_right"
                android:contentDescription="@string/img_content_discription"
                android:scaleType="fitCenter"
                android:src="@drawable/fyzb_logo_icon" />

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgv_source"
                android:gravity="bottom"
                android:text="@string/teststring"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/title_primary" />

            <TextView
                android:id="@+id/tv_source_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_source"
                android:layout_marginLeft="8.3dp"
                android:layout_toRightOf="@+id/tv_source"
                android:gravity="bottom"
                android:text="@string/teststring"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/title_third"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_source_secondary"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignBottom="@id/tv_source"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8.3dp"
                android:layout_toRightOf="@+id/tv_source"
                android:contentDescription="@string/img_content_discription"
                android:scaleType="fitStart"
                android:src="@drawable/fyzb_logo_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_title_style2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imgv_source_title2"
                android:layout_height="@dimen/title_primary_two_icon_size"
                android:layout_width="@dimen/title_primary_two_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/img_content_discription"
                android:src="@drawable/default_contact_img" />

            <TextView
                android:id="@+id/tv_source_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgv_source_title2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imgv_source_title2"
                android:text="@string/teststring"
                android:textColor="@color/selection_base_title_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_source_sub_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgv_source_title2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imgv_source_title2"
                android:gravity="bottom"
                android:text="@string/teststring"
                android:textColor="@color/selection_base_title_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_filter"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout_title_style1" >

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_margin_between_filter_text_and_img"
                android:layout_toLeftOf="@+id/iv_filter"
                android:text="@string/teststring"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/title_secondary" />

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="@dimen/title_secondary_icon_size"
                android:layout_height="@dimen/title_secondary_icon_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_margin_border"
                android:contentDescription="@string/img_content_discription"
                android:scaleType="centerInside"
                android:src="@drawable/selection_filter_icon" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/base_separate0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_title"
        android:background="@drawable/bg_line"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_sub_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_below="@id/base_separate0"
        android:background="@drawable/list_item_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/base_separate1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_sub_title"
        android:background="@drawable/bg_line"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/base_separate1"
        android:background="@color/app_bg"
        android:orientation="vertical" >

         <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:baselineAligned="false"
           	android:orientation="horizontal">
             
	        <RelativeLayout
	            android:id="@+id/layout_content_base_parent"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_marginTop="-5dp"
	            android:layout_weight="1"
	            android:orientation="horizontal" >
	
	            <ListView
	                android:id="@+id/layout_content_list_base"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	    			android:background="@drawable/background"
	                android:layout_marginTop="5dp"
	                android:cacheColorHint="#00000000"
	                android:clickable="false"
	                android:footerDividersEnabled="false"
	                android:divider="@drawable/bg_line"
	                android:listSelector="@android:color/transparent"
	                android:orientation="vertical" >
	            </ListView>
	
	            <LinearLayout
	                android:id="@+id/layout_content_normal_base"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_marginTop="5dp"
	    			android:background="@drawable/background"
	                android:orientation="vertical"
	                android:visibility="gone" />
	
	               
	                <!-- <TextView
	                    android:id="@+id/tv_common"
	                    android:layout_width="90dp"
	                    android:layout_height="wrap_content"
	                    android:drawableTop="@drawable/tv_play_show"
	                    android:gravity="center"
	                    android:textColor="@color/text_content_color"
	                    android:textSize="@dimen/content_primary"
	                    android:text="@string/teststring" /> -->
	            <!-- </LinearLayout> -->
	        </RelativeLayout>
        
	        <LinearLayout
                android:id="@+id/common_layout"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#0d2d42"
                android:gravity="center"  > 
		        <ImageView
				 	android:id="@+id/iv_common" 
				    android:layout_width="20dp"
				    android:layout_weight = "1"
				    android:layout_height ="0dp"
				    android:layout_gravity="center"
				    android:contentDescription="@string/img_content_discription"
				    android:scaleType="centerInside"
				    android:src="@drawable/icons_play_58" />
		    </LinearLayout>
	   </LinearLayout>
	
        <LinearLayout
            android:id="@+id/base_separate2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_line"
            android:orientation="vertical" />
        

        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg" >

            <ImageView
                android:id="@+id/iv_bottom"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/img_content_discription"
                android:scaleType="fitStart"
                android:src="@drawable/list_extend_btn" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_yes_no_btns"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone" >
            
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/confirm_btn_blue"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/send_sms_txt_cancel"
                android:textSize="@dimen/send_sms_btn" />
            
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/confirm_btn_blue"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/send_sms_txt_send"
                android:textSize="@dimen/send_sms_btn" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_filter_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_title"
        android:background="@drawable/pull_down_menu_background"
        android:layout_marginTop="-6dp"
        android:layout_marginRight="6.6dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/layout_filter_list_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
