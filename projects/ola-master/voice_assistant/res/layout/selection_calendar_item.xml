<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customSwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:background="@drawable/bg_alarm_item"
        android:paddingBottom="5dp"
        android:paddingRight="5dp" >

        <RelativeLayout
            android:id="@+id/layout_time"
            android:layout_width="156dp"
            android:layout_height="75dp"
            android:background="@drawable/bg_alarm_time" >

            <TextView
                android:id="@+id/tv_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="00"
                android:textColor="@color/alarm_txt_time"
                android:textSize="@dimen/txt_alarm_time" />

            <TextView
                android:id="@+id/tv_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="00"
                android:textColor="@color/alarm_txt_time"
                android:textSize="@dimen/txt_alarm_time" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/alarm_time_show" />

            <ImageView
                android:id="@+id/imgv_am_or_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/alarm_icon_am" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/alarm_txt_black"
                    android:textSize="@dimen/txt_alarm_title" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_alarm_week"
                    android:textColor="@color/alarm_txt_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_week0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="日"
                    android:textSize="@dimen/txt_alarm_week" />

                <TextView
                    android:id="@+id/tv_week1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="一"
                    android:textSize="@dimen/txt_alarm_week" />

                <TextView
                    android:id="@+id/tv_week2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="二"
                    android:textSize="@dimen/txt_alarm_week" />

                <TextView
                    android:id="@+id/tv_week3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="三"
                    android:textSize="@dimen/txt_alarm_week" />

                <TextView
                    android:id="@+id/tv_week4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="四"
                    android:textSize="@dimen/txt_alarm_week" />

                <TextView
                    android:id="@+id/tv_week5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="五"
                    android:textSize="@dimen/txt_alarm_week" />

                <TextView
                    android:id="@+id/tv_week6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="六"
                    android:textSize="@dimen/txt_alarm_week" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>