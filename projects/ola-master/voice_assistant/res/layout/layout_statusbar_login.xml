    <ImageView
        android:id="@+id/image_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/help_button">
    </ImageView>
    
    <RelativeLayout
        android:id="@+id/layout_before_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/statusbar_logo_icon" >
        </ImageView>
        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:src="@drawable/statusbar_login_button" >
        </ImageView>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_login_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/image_help"
        android:layout_centerHorizontal="true"
        android:visibility="visible" >

		<ImageView
		   android:id="@+id/btn_goback"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_alignParentLeft="true"
		   android:layout_centerVertical="true"
		   android:layout_marginLeft="0dp"
		   android:src="@drawable/go_back_button"
		   android:visibility="invisible"  >
		</ImageView>
		
        <RelativeLayout
            android:id="@+id/layout_login_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center" >
                          
            <LinearLayout
                android:id="@+id/layout_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp"
                android:background="@drawable/statusbar_level_bg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/icon_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/statusbar_up_1"
                    android:visibility="visible" >
                </ImageView>

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="257895"
                    android:textColor="@color/statusbar_score_gold"
                    android:textSize="10sp" >
                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_medal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/layout_score"
                android:layout_marginLeft="-8dp"
                android:src="@drawable/statusbar_gold_1" >
            </ImageView>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/icon_medal"
                android:text="username"
                android:singleLine="true"
                android:maxWidth="130dp"
                android:textColor="@color/statusbar_username"
                android:textSize="18sp" >
            </TextView>
            
            <ImageView
                android:id="@+id/icon_authenticate_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/username"
                android:layout_marginLeft="2dp"
                android:src="@drawable/user_icon" >
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>
    
</RelativeLayout>