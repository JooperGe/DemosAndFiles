<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/plane_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/tv_index"
        style="@style/selection_index"
      />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/plane_title"
            android:textSize="@dimen/plane_txt_title" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            >

            <ImageView
                android:id="@+id/imgv_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/img_content_discription"
                android:src="@drawable/icon_begin" />

            <TextView
                android:id="@+id/tv_time_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgv_begin"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imgv_begin"
                android:textColor="@color/plane_content"
                android:textSize="@dimen/plane_txt_time" />

            <TextView
                android:id="@+id/tv_station_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_time_begin"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_time_begin"
                android:textColor="@color/plane_content"
                android:textSize="@dimen/plane_txt_content" />

            <ImageView
                android:id="@+id/imgv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgv_begin"
                android:layout_below="@+id/imgv_begin"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/img_content_discription"
                android:src="@drawable/icon_end" />

            <TextView
                android:id="@+id/tv_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgv_end"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imgv_end"
                android:textColor="@color/plane_content"
                android:textSize="@dimen/plane_txt_time" />

            <TextView
                android:id="@+id/tv_station_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_time_end"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_time_end"
                android:textColor="@color/plane_content"
                android:textSize="@dimen/plane_txt_content" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- <TextView -->
    <!-- android:id="@+id/tv_last_time" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_marginRight="10dp" -->
    <!-- android:textColor="@color/plane_rebate" -->
    <!-- android:textSize="@dimen/plane_txt_rebate" /> -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/plane_price"
            android:textSize="@dimen/plane_txt_price" />

        <TextView
            android:id="@+id/tv_seat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/plane_rebate"
            android:textSize="@dimen/plane_txt_rebate" />
    </LinearLayout>

</LinearLayout>