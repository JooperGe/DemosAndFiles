<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_exchange_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="12.5dp"
        android:layout_marginLeft="@dimen/content_index_margin_left"
        android:layout_marginTop="12.5dp"
        android:layout_weight="2"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="@string/teststring"
        android:textColor="@color/text_content_color"
        android:textSize="@dimen/content_primary" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="12.5dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="12.5dp"
        android:contentDescription="@string/img_content_discription"
        android:src="@drawable/icn_exchage_58" />

    <TextView
        android:id="@+id/tv_exchange_target"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="12.5dp"
        android:layout_marginRight="12.5dp"
        android:layout_marginTop="12.5dp"
        android:layout_weight="3"
        android:gravity="right|center_vertical"
        android:singleLine="true"
        android:text="@string/teststring"
        android:textColor="@color/text_content_color"
        android:textSize="@dimen/content_primary" />

</LinearLayout>